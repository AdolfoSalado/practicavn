<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Tema base de la aplicaci칩n. -->
    <style name="Base.Theme.Practicavn" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Color principal de la marca. -->
        <item name="colorPrimary">@color/green</item>
        <item name="colorPrimaryVariant">@color/green</item>
        <item name="colorOnPrimary">@color/black</item>
        <!-- Color secundario de la marca. -->
        <item name="colorSecondary">@color/green</item>
        <item name="colorSecondaryVariant">@color/green</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Color de la barra de estado. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Color de fondo para toda la ventana. -->
        <item name="android:windowBackground">@color/white</item>
        <!-- Color de texto para los elementos de texto principal. -->
        <item name="android:textColor">@color/black</item>
        <!-- Color de texto secundario. -->
        <item name="android:textColorSecondary">@color/black</item>
        <!-- Tama침o de texto predeterminado. -->
        <item name="android:textSize">15sp</item>
        <!-- Color utilizado para resaltar elementos interactivos. -->
        <item name="colorAccent">@color/green</item>
        <!-- Estilo para el BottomNavigationView. -->
        <item name="bottomNavigationStyle">@style/CustomBottomNavigation</item>
    </style>

    <!-- Tema de la aplicaci칩n. -->
    <style name="Theme.Practicavn" parent="Base.Theme.Practicavn" />

    <!-- Estilo para el TabLayout. -->
    <style name="CustomTabLayout" parent="Widget.Material3.TabLayout">
        <item name="tabTextColor">@color/grey</item>
        <item name="tabSelectedTextColor">@color/black</item>
        <item name="tabIndicatorColor">@color/black</item>
        <item name="android:background">@color/white</item>
        <item name="tabRippleColor">@color/green</item>
    </style>

    <!-- Estilo para el BottomNavigationView. -->
    <style name="CustomBottomNavigation" parent="Widget.Material3.BottomNavigationView">
        <item name="android:background">@drawable/rounded_bottom_nav</item>
        <item name="itemIconTint">@color/bottom_navigation_icon_tint</item>
        <item name="itemTextColor">@color/bottom_navigation_text_color</item>
        <item name="itemTextAppearanceInactive">@style/BottomNavigationInactiveItemTextStyle</item>
        <item name="itemTextAppearanceActive">@style/BottomNavigationActiveItemTextStyle</item>
        <item name="itemRippleColor">@color/green</item>
        <item name="labelVisibilityMode">labeled</item>
        <item name="android:paddingTop">8dp</item>
        <item name="android:paddingBottom">8dp</item>
        <item name="colorAccent">@color/green</item>
        <item name="colorPrimary">@color/green</item>
        <item name="itemActiveIndicatorStyle">@style/BottomNavigationActiveIndicator</item>
    </style>

    <!-- Estilo para el indicador activo del BottomNavigationView. -->
    <style name="BottomNavigationActiveIndicator" parent="Widget.Material3.BottomNavigationView.ActiveIndicator">
        <item name="android:color">@color/green</item>
    </style>

    <!-- Estilo para el texto inactivo del BottomNavigationView. -->
    <style name="BottomNavigationInactiveItemTextStyle" parent="TextAppearance.AppCompat.Caption">
        <item name="android:textSize">12sp</item>
        <item name="colorAccent">@color/green</item>
        <item name="colorPrimary">@color/green</item>
    </style>

    <!-- Estilo para el texto activo del BottomNavigationView. -->
    <style name="BottomNavigationActiveItemTextStyle" parent="TextAppearance.AppCompat.Body2">
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">bold</item>
        <item name="colorAccent">@color/green</item>
        <item name="colorPrimary">@color/green</item>
    </style>

    <!-- Estilo para el EditText. -->
    <style name="CustomEditText" parent="ThemeOverlay.Material3.TextInputEditText">
        <item name="android:textColor">@color/black</item>
        <item name="android:textColorHint">@color/grey</item>
        <item name="backgroundColor">@color/green</item>
    </style>

    <!-- Estilo para el AlertDialog. -->
    <style name="CustomAlertDialogStyle" parent="Theme.AppCompat.Dialog.Alert">
        <item name="colorAccent">@color/green</item>
        <item name="android:textColorPrimary">@color/black</item>
        <item name="android:background">@color/white</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">15sp</item>
        <item name="android:layout_gravity">center</item>
        <item name="buttonBarButtonStyle">@style/CustomAlertDialogButtonStyle</item>
    </style>

    <!-- Estilo para el bot칩n del AlertDialog. -->
    <style name="CustomAlertDialogButtonStyle">
        <item name="itemBackground">@color/green</item>
    </style>

    <!-- Estilo para el DatePickerDialog. -->
    <style name="GreenDatePickerDialog" parent="ThemeOverlay.AppCompat.Dialog">
        <item name="colorAccent">@color/green</item>
        <item name="colorPrimary">@color/green</item>
        <item name="android:datePickerStyle">@style/GreenDatePicker</item>
    </style>

    <!-- Estilo para el DatePicker. -->
    <style name="GreenDatePicker" parent="android:Widget.DatePicker">
        <item name="android:headerBackground">@color/green</item>
        <item name="android:calendarViewShown">true</item>
        <item name="android:datePickerMode">calendar</item>
        <item name="colorAccent">@color/green</item>
    </style>

    <!-- Estilo para el Slider. -->
    <style name="MySliderStyle" parent="Widget.MaterialComponents.Slider">
        <item name="labelStyle">@style/MySliderLabelStyle</item>
        <item name="trackColor">@color/grey</item>
        <item name="trackColorInactive">@color/grey</item>
        <item name="android:progressDrawable">@drawable/slider_track_custom</item>

    </style>

    <!-- Estilo para el "bubble" del Slider. -->
    <style name="MySliderLabelStyle" parent="Widget.MaterialComponents.Tooltip">
        <item name="backgroundTint">@color/green</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">10sp</item>
    </style>
</resources>